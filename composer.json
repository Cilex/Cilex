{
    "name"        : "cilex/cilex",
    "description" : "The PHP micro-framework for Command line tools based on the Symfony2 Components",
    "keywords"    : ["microframework","cli"],
    "homepage"    : "http://cilex.github.com",
    "license"     : "MIT",

    "autoload" : {
        "psr-4" : { "Cilex\\": "src/Cilex" }
    },

    "authors":[
        { "name":  "Mike van Riel", "email": "me@mikevanriel.com" }
    ],

    "require" : {
        "php"                      : "~5.4",
        "pimple/pimple"            : "3.0.0 as 2.1.0",
        "silex/api"                : "2.0.x-dev",
        "symfony/process"          : "~2.4",
        "symfony/console"          : "~2.4",
        "symfony/event-dispatcher" : "~2.4"
    },

    "require-dev" : {
        "phpunit/phpunit" : "~3.7"
    },

    "suggest" : {
        "symfony/yaml"      : "~2.4",
        "symfony/validator" : "~2.4"
    },

    "extra" : {
        "branch-alias" : {
            "dev-develop": "2.0-dev"
        }
   }
}
